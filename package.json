{
	"private": true,
	"scripts": {
		"build": "turbo build",
		"clean": "turbo clean",
		"dev": "dotenv -- turbo dev --no-cache  --continue --concurrency 20",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"lint": "turbo lint",
		"test": "turbo test",
		"prepare": "husky install"
	},
	"devDependencies": {
		"eslint": "^8.45.0",
		"eslint-config-custom": "workspace:*",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.3",
		"prettier": "^3.0.0",
		"turbo": "latest",
		"dotenv-cli": "^7.2.1"
	},
	"packageManager": "pnpm@7.15.0",
	"lint-staged": {
		"apps/**/*.{js,ts,jsx,tsx}": [
			"eslint --fix"
		],
		"packages/**/*.{js,ts,jsx,tsx}": [
			"eslint --fix"
		],
		"*.json": [
			"prettier --write"
		]
	}
}
