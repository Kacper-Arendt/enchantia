{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"globalEnv": ["PORT", "JWT_ACCESS_SECRET", "JWT_REFRESH_SECRET", "NODE_ENV"],
	"pipeline": {
		"build": {
			"outputs": ["dist/**", ".next/**", "!.next/cache/**", "build/**", "api/**", "public/build/**"],
			"dependsOn": ["^build", "^db:generate"]
		},
		"test": {
			"outputs": ["coverage/**"],
			"dependsOn": []
		},
		"lint": {
			"dependsOn": ["^build"]
		},
		"dev": {
			"dependsOn": ["^build", "^db:generate"],
			"cache": false,
			"persistent": true
		},
		"clean": {
			"cache": false
		},
		"db:generate": {
			"cache": false
		},
		"db:push": {
			"cache": false
		}
	}
}
